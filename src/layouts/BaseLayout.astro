---
import "../styles/global.css";
import Footer from "../components/footer/Footer.astro";
import Header from "../components/header/Header.astro";
import { firm } from "../config/firm";

interface BaseLayoutProps {
  title?: string;
  description?: string;
  noIndex?: boolean;
  canonicalPath?: string;
  ogImage?: string;
  ogImageAlt?: string;
  ogType?: "website" | "article";
  structuredData?: Record<string, unknown> | Array<Record<string, unknown>>;

  // Optional article-only fields (ISO 8601 strings recommended)
  publishedTime?: string; // e.g. "2026-02-15T10:00:00+00:00"
  modifiedTime?: string; // e.g. "2026-02-16T12:30:00+00:00"
  author?: string; // name or URL
  section?: string; // e.g. "Insights"
  tags?: string[]; // e.g. ["Conveyancing", "Property"]
}

const {
  title = firm.seo.defaultTitle,
  description = firm.seo.defaultDescription,
  noIndex = false,
  canonicalPath,
  ogImage = firm.seo.defaultOgImage,
  ogImageAlt = firm.seo.defaultOgImageAlt,
  ogType = "website",
  structuredData,
  publishedTime,
  modifiedTime,
  author,
  section,
  tags = [],
} = Astro.props as BaseLayoutProps;

const canonical = firm.siteUrl
  ? new URL(canonicalPath ?? Astro.url.pathname, firm.siteUrl).toString()
  : undefined;

const ogImageUrl =
  firm.siteUrl && ogImage
    ? new URL(ogImage, firm.siteUrl).toString()
    : undefined;

const isArticle = ogType === "article";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Document basics -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/images/favicon/favicon.svg" type="image/svg+xml" />

    <!-- Canonical & crawling -->
    {canonical && <link rel="canonical" href={canonical} />}
    {noIndex && <meta name="robots" content="noindex, nofollow" />}
    <meta property="og:site_name" content={firm.companyName} />

    <!-- Open Graph base -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {canonical && <meta property="og:url" content={canonical} />}
    <meta property="og:type" content={ogType} />
    <meta property="og:locale" content="en_IE" />

    <!-- Open Graph image -->
    {ogImageUrl && <meta property="og:image" content={ogImageUrl} />}
    {ogImageUrl && <meta property="og:image:secure_url" content={ogImageUrl} />}
    {ogImageUrl && <meta property="og:image:type" content="image/webp" />}
    {
      ogImageUrl && ogImageAlt && (
        <meta property="og:image:alt" content={ogImageAlt} />
      )
    }
    {ogImageUrl && <meta property="og:image:width" content="1200" />}
    {ogImageUrl && <meta property="og:image:height" content="630" />}

    <!-- Article metadata (conditional) -->
    {
      isArticle && publishedTime && (
        <meta property="article:published_time" content={publishedTime} />
      )
    }
    {
      isArticle && modifiedTime && (
        <meta property="article:modified_time" content={modifiedTime} />
      )
    }
    {isArticle && author && <meta property="article:author" content={author} />}
    {
      isArticle && section && (
        <meta property="article:section" content={section} />
      )
    }
    {
      isArticle &&
        tags.length > 0 &&
        tags.map((t) => <meta property="article:tag" content={t} />)
    }

    <!-- Twitter -->
    <meta
      name="twitter:card"
      content={ogImageUrl ? "summary_large_image" : "summary"}
    />
    {
      ogImageUrl && ogImageAlt && (
        <meta name="twitter:image:alt" content={ogImageAlt} />
      )
    }
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {ogImageUrl && <meta name="twitter:image" content={ogImageUrl} />}

    {canonical && <meta name="twitter:url" content={canonical} />}
    {
      structuredData && (
        <script
          type="application/ld+json"
          set:html={JSON.stringify(structuredData)}
        />
      )
    }
  </head>
  <body class="bg-bg text-text">
    <Header />
    <main><slot /></main>
    <Footer />
  </body>
</html>
