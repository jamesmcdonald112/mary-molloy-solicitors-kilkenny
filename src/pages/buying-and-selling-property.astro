---
import { propertyPageContent as content } from "../config/content/property";
import { firm } from "../config/firm";
import BaseLayout from "../layouts/BaseLayout.astro";
import PhoneNumber from "../components/header/PhoneNumber.astro";
import phoneIcon from "../assets/phone/phoneIcon.svg?raw";

const finalCtaPrimaryLink =
  content.finalCta.ctas.find((cta) => !cta.href.startsWith("tel:")) ??
  content.finalCta.ctas[0];
---

<BaseLayout
  title={content.seo.title}
  description={content.seo.description}
  canonicalPath={content.seo.canonicalPath}
  ogType="website"
>
  <section class="relative bg-white">
    <div class="mx-auto max-w-7xl lg:grid lg:grid-cols-12 lg:gap-x-8 lg:px-8">
      <div
        class="px-6 pt-8 pb-16 sm:pb-20 lg:col-span-7 lg:px-0 lg:pt-20 lg:pb-28 xl:col-span-6"
      >
        <div class="mx-auto max-w-lg lg:mx-0">
          <div class="hidden sm:mt-16 sm:flex lg:mt-10">
            <div
              class="relative rounded-full px-3 py-1 text-sm/6 text-gray-500 ring-1 ring-gray-900/10 hover:ring-gray-900/20"
            >
              Property solicitor support for buying and selling in Kilkenny. <a
                href="/contact"
                class="font-semibold whitespace-nowrap text-indigo-600"
                ><span aria-hidden="true" class="absolute inset-0"
                ></span>Contact us <span aria-hidden="true">&rarr;</span></a
              >
            </div>
          </div>
          <h1
            class="mt-10 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:mt-8 sm:text-6xl"
          >
            {content.hero.title}
          </h1>
          <p
            class="mt-8 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8"
          >
            {content.hero.subtitle}
          </p>
          <div class="mt-10 flex items-center gap-x-6">
            <PhoneNumber
              phoneHref={firm.phone.phoneHref}
              phoneIcon={phoneIcon}
              phoneDisplay={firm.phone.display}
              size={"sm"}
              class="inline-flex justify-center w-full sm:w-fit px-4 py-2 text-gray-700 rounded-md border border-gray-500 transition-colors duration-200 hover:text-gray-800 hover:bg-gray-200"
            />
            <a href="/contact" class="text-sm/6 font-semibold text-gray-900"
              >Book consultation <span aria-hidden="true">→</span></a
            >
          </div>
        </div>
      </div>
      <div
        class="relative lg:col-span-5 lg:-mr-8 xl:absolute xl:inset-0 xl:left-1/2 xl:mr-0"
      >
        <img
          src={content.hero.image.src}
          alt={content.hero.image.alt}
          class="aspect-3/2 w-full bg-gray-50 object-cover object-[70%_center] lg:absolute lg:inset-0 lg:aspect-auto lg:h-full"
          loading="eager"
          decoding="async"
        />
      </div>
    </div>
  </section>

  <section class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:text-center">
        <h2 class="text-base/7 font-semibold text-indigo-600">
          {content.servicesSection.eyebrow}
        </h2>
        <p
          class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl lg:text-balance"
        >
          {content.servicesSection.title}
        </p>
        <p class="mt-6 text-lg/8 text-gray-600">
          {content.servicesSection.description}
        </p>
      </div>
      <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
        <dl
          class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-2"
        >
          {
            content.services.map((service, index) => (
              <div class="flex flex-col rounded-2xl p-8 ring-1 ring-gray-900/10">
                <dt class="flex items-center gap-x-3 text-base/7 font-semibold text-gray-900">
                  <svg
                    viewBox="0 0 20 20"
                    fill="currentColor"
                    aria-hidden="true"
                    class="size-5 flex-none text-indigo-600"
                  >
                    {index === 0 ? (
                      <path d="M10.756 1.36a1.5 1.5 0 0 0-1.512 0l-7 4A1.5 1.5 0 0 0 1.5 6.66V16A2.5 2.5 0 0 0 4 18.5h2.5A1.5 1.5 0 0 0 8 17v-3a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1.5 1.5 0 0 0 1.5 1.5H16a2.5 2.5 0 0 0 2.5-2.5V6.66a1.5 1.5 0 0 0-.744-1.3l-7-4Z" />
                    ) : (
                      <path d="M5.5 2A2.5 2.5 0 0 0 3 4.5v11A2.5 2.5 0 0 0 5.5 18h9a2.5 2.5 0 0 0 2.5-2.5v-8.379a2.5 2.5 0 0 0-.732-1.768l-2.621-2.621A2.5 2.5 0 0 0 11.879 2H5.5Zm6.5 1.5v2A1.5 1.5 0 0 0 13.5 7h2v8.5a1 1 0 0 1-1 1h-9a1 1 0 0 1-1-1v-11a1 1 0 0 1 1-1h6.5ZM7 10a.75.75 0 0 0 0 1.5h6a.75.75 0 0 0 0-1.5H7Zm0 3a.75.75 0 0 0 0 1.5h6a.75.75 0 0 0 0-1.5H7Z" />
                    )}
                  </svg>
                  {service.title}
                </dt>
                <dd class="mt-4 flex flex-auto flex-col text-base/7 text-gray-600">
                  <p class="flex-auto">{service.summary}</p>
                  <ul role="list" class="mt-6 space-y-2">
                    {service.points.slice(0, 4).map((point) => (
                      <li class="flex gap-x-3">
                        <svg
                          viewBox="0 0 20 20"
                          fill="currentColor"
                          aria-hidden="true"
                          class="mt-1 size-4 flex-none text-indigo-600"
                        >
                          <path d="M16.704 5.29a1 1 0 0 1 .006 1.414l-8 8a1 1 0 0 1-1.414 0l-4-4a1 1 0 1 1 1.414-1.414L8 12.586l7.296-7.296a1 1 0 0 1 1.408 0Z" />
                        </svg>
                        <span>{point}</span>
                      </li>
                    ))}
                  </ul>
                  <p class="mt-6">
                    <a
                      href={service.ctaHref}
                      class="text-sm/6 font-semibold text-indigo-600 hover:text-indigo-500"
                    >
                      {service.ctaLabel} <span aria-hidden="true">→</span>
                    </a>
                  </p>
                </dd>
              </div>
            ))
          }
        </dl>
      </div>
    </div>
  </section>

  <section class="relative bg-gray-800 px-6 py-24 sm:px-12 sm:py-32 lg:px-16">
    <div class="absolute inset-0 overflow-hidden">
      <img
        src={content.hero.image.src}
        alt={content.hero.image.alt}
        class="size-full object-cover"
      />
    </div>
    <div aria-hidden="true" class="absolute inset-0 bg-gray-900/10"></div>
    <div class="relative mx-auto max-w-7xl">
      <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-none">
        <p class="text-base/7 font-semibold text-indigo-300">
          {content.trustStrip.eyebrow}
        </p>
        <h2
          class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-white sm:text-5xl"
        >
          {content.trustStrip.title}
        </h2>
        <div
          class="mt-10 grid max-w-xl grid-cols-1 gap-8 text-base/7 text-white/90 lg:max-w-none lg:grid-cols-2"
        >
          {
            content.trustStrip.columns.map((column) => (
              <div>
                {column.map((paragraph, index) => (
                  <p class={index > 0 ? "mt-8" : undefined}>{paragraph}</p>
                ))}
              </div>
            ))
          }
        </div>
        <dl
          class="mt-16 grid grid-cols-1 gap-x-8 gap-y-8 sm:mt-20 sm:grid-cols-2 lg:mt-24 lg:grid-cols-4"
        >
          {
            content.trustStrip.stats.map((stat) => (
              <div class="rounded-xl bg-white/10 p-5 ring-1 ring-white/20 backdrop-blur-sm">
                <dt class="text-sm/6 text-white/80">{stat.label}</dt>
                <dd class="mt-1 text-2xl font-semibold tracking-tight text-white">
                  {stat.value}
                </dd>
              </div>
            ))
          }
        </dl>
      </div>
    </div>
  </section>

  <!-- Process -->
  <section class="relative isolate overflow-hidden bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <p class="text-base/7 font-semibold text-indigo-600">
          {content.process.eyebrow}
        </p>
        <h2
          class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl"
        >
          {content.process.title}
        </h2>
        <p class="mt-6 text-xl/8 text-gray-700">{content.process.intro}</p>
      </div>
      <div
        class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 lg:mx-0 lg:mt-10 lg:max-w-none lg:grid-cols-12"
      >
        <div class="relative lg:order-last lg:col-span-5">
          <svg
            aria-hidden="true"
            class="absolute -top-64 left-1/2 -z-10 h-64 w-[44rem] -translate-x-1/2 mask-[radial-gradient(64rem_64rem_at_111.5rem_0%,white,transparent)] stroke-gray-900/10"
          >
            <defs>
              <pattern
                id="process-grid-pattern"
                width="200"
                height="200"
                patternUnits="userSpaceOnUse"
              >
                <path d="M0.5 0V200M200 0.5L0 0.499983"></path>
              </pattern>
            </defs>
            <rect
              width="100%"
              height="100%"
              fill="url(#process-grid-pattern)"
              stroke-width="0"></rect>
          </svg>
          <figure class="border-l border-indigo-600 pl-8">
            <blockquote
              class="text-xl/8 font-semibold tracking-tight text-gray-900"
            >
              <p>"{content.process.closing}"</p>
            </blockquote>
            <figcaption class="mt-8 flex gap-x-4">
              <img
                src={content.process.image.src}
                alt={content.process.image.alt}
                class="mt-1 size-10 flex-none rounded-full bg-gray-50 object-cover"
              />
              <div class="text-sm/6">
                <div class="font-semibold text-gray-900">
                  {firm.companyName}
                </div>
                <div class="text-gray-600">Property Law Team</div>
              </div>
            </figcaption>
          </figure>
        </div>
        <div class="max-w-xl text-base/7 text-gray-600 lg:col-span-7">
          <p>{content.process.body}</p>
          <ul role="list" class="mt-8 max-w-xl space-y-8 text-gray-600">
            {
              content.process.steps.map((step) => (
                <li class="flex gap-x-3">
                  <svg
                    viewBox="0 0 20 20"
                    fill="currentColor"
                    aria-hidden="true"
                    class="mt-1 size-5 flex-none text-indigo-600"
                  >
                    <path
                      d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm3.857-9.809a.75.75 0 0 0-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 1 0-1.06 1.061l2.5 2.5a.75.75 0 0 0 1.137-.089l4-5.5Z"
                      clip-rule="evenodd"
                      fill-rule="evenodd"
                    />
                  </svg>
                  <span>
                    <strong class="font-semibold text-gray-900">
                      {step.title}.
                    </strong>{" "}
                    {step.description}
                  </span>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:text-center">
        <p class="text-base/7 font-semibold text-indigo-600">
          {content.prepare.eyebrow}
        </p>
        <h2
          class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl lg:text-balance"
        >
          {content.prepare.title}
        </h2>
        <p class="mt-6 text-lg/8 text-gray-600">
          {content.prepare.description}
        </p>
      </div>
      <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
        <dl
          class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-12 lg:max-w-none lg:grid-cols-2"
        >
          <div class="flex flex-col rounded-2xl p-8 ring-1 ring-gray-900/10">
            <dt
              class="flex items-center gap-x-3 text-base/7 font-semibold text-gray-900"
            >
              <svg
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
                class="size-5 flex-none text-indigo-600"
              >
                <path
                  d="M10.756 1.36a1.5 1.5 0 0 0-1.512 0l-7 4A1.5 1.5 0 0 0 1.5 6.66V16A2.5 2.5 0 0 0 4 18.5h2.5A1.5 1.5 0 0 0 8 17v-3a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1.5 1.5 0 0 0 1.5 1.5H16a2.5 2.5 0 0 0 2.5-2.5V6.66a1.5 1.5 0 0 0-.744-1.3l-7-4Z"
                ></path>
              </svg>
              Buyers
            </dt>
            <dd class="mt-4 text-base/7 text-gray-600">
              <ul role="list" class="space-y-3">
                {
                  content.prepare.buyers.map((item) => (
                    <li class="flex gap-x-3">
                      <svg
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        aria-hidden="true"
                        class="mt-1 size-4 flex-none text-indigo-600"
                      >
                        <path d="M16.704 5.29a1 1 0 0 1 .006 1.414l-8 8a1 1 0 0 1-1.414 0l-4-4a1 1 0 1 1 1.414-1.414L8 12.586l7.296-7.296a1 1 0 0 1 1.408 0Z" />
                      </svg>
                      <span>{item}</span>
                    </li>
                  ))
                }
              </ul>
            </dd>
          </div>

          <div class="flex flex-col rounded-2xl p-8 ring-1 ring-gray-900/10">
            <dt
              class="flex items-center gap-x-3 text-base/7 font-semibold text-gray-900"
            >
              <svg
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
                class="size-5 flex-none text-indigo-600"
              >
                <path
                  d="M5.5 2A2.5 2.5 0 0 0 3 4.5v11A2.5 2.5 0 0 0 5.5 18h9a2.5 2.5 0 0 0 2.5-2.5v-8.379a2.5 2.5 0 0 0-.732-1.768l-2.621-2.621A2.5 2.5 0 0 0 11.879 2H5.5Zm6.5 1.5v2A1.5 1.5 0 0 0 13.5 7h2v8.5a1 1 0 0 1-1 1h-9a1 1 0 0 1-1-1v-11a1 1 0 0 1 1-1h6.5ZM7 10a.75.75 0 0 0 0 1.5h6a.75.75 0 0 0 0-1.5H7Zm0 3a.75.75 0 0 0 0 1.5h6a.75.75 0 0 0 0-1.5H7Z"
                ></path>
              </svg>
              Sellers
            </dt>
            <dd class="mt-4 text-base/7 text-gray-600">
              <ul role="list" class="space-y-3">
                {
                  content.prepare.sellers.map((item) => (
                    <li class="flex gap-x-3">
                      <svg
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        aria-hidden="true"
                        class="mt-1 size-4 flex-none text-indigo-600"
                      >
                        <path d="M16.704 5.29a1 1 0 0 1 .006 1.414l-8 8a1 1 0 0 1-1.414 0l-4-4a1 1 0 1 1 1.414-1.414L8 12.586l7.296-7.296a1 1 0 0 1 1.408 0Z" />
                      </svg>
                      <span>{item}</span>
                    </li>
                  ))
                }
              </ul>
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </section>

  <section class="bg-white">
    <div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8 lg:py-40">
      <div class="mx-auto max-w-4xl">
        <h2
          class="text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl"
        >
          Frequently asked questions
        </h2>
        <dl class="mt-16 divide-y divide-gray-900/10">
          {
            content.faqs.map((faq) => (
              <div class="py-6 first:pt-0 last:pb-0">
                <details class="group">
                  <summary class="flex w-full cursor-pointer list-none items-start justify-between text-left text-gray-900">
                    <span class="text-base/7 font-semibold">
                      {faq.question}
                    </span>
                    <span class="ml-6 flex h-7 items-center">
                      <svg
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.5"
                        aria-hidden="true"
                        class="size-6 group-open:hidden"
                      >
                        <path
                          d="M12 6v12m6-6H6"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        />
                      </svg>
                      <svg
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.5"
                        aria-hidden="true"
                        class="hidden size-6 group-open:block"
                      >
                        <path
                          d="M18 12H6"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        />
                      </svg>
                    </span>
                  </summary>
                  <dd class="mt-2 pr-12">
                    <p class="text-base/7 text-gray-600">{faq.answer}</p>
                  </dd>
                </details>
              </div>
            ))
          }
        </dl>
      </div>
    </div>
  </section>

  <section class="overflow-hidden bg-white py-24 sm:py-32">
    <div class="relative isolate">
      <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div
          class="mx-auto flex max-w-2xl flex-col gap-16 bg-white/75 px-6 py-16 shadow-lg ring-1 ring-gray-900/5 sm:rounded-3xl sm:p-8 lg:mx-0 lg:max-w-none lg:flex-row lg:items-center lg:py-20 xl:gap-x-20 xl:px-20"
        >
          <img
            src={content.hero.image.src}
            alt={content.hero.image.alt}
            class="h-96 w-full flex-none rounded-2xl object-cover lg:aspect-square lg:h-auto lg:max-w-sm"
          />
          <div class="w-full flex-auto">
            <h2
              class="text-4xl font-semibold tracking-tight text-pretty text-gray-950 sm:text-5xl"
            >
              {content.finalCta.title}
            </h2>
            <p class="mt-6 text-lg/8 text-pretty text-gray-600">
              {content.finalCta.body}
            </p>
            <ul
              role="list"
              class="mt-10 grid grid-cols-1 gap-x-8 gap-y-3 text-base/7 text-gray-950 sm:grid-cols-2"
            >
              {
                content.trustStrip.stats.map((stat) => (
                  <li class="flex gap-x-3">
                    <svg
                      viewBox="0 0 20 20"
                      fill="currentColor"
                      data-slot="icon"
                      aria-hidden="true"
                      class="h-7 w-5 flex-none text-indigo-500"
                    >
                      <path
                        d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm3.857-9.809a.75.75 0 0 0-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 1 0-1.06 1.061l2.5 2.5a.75.75 0 0 0 1.137-.089l4-5.5Z"
                        clip-rule="evenodd"
                        fill-rule="evenodd"
                      />
                    </svg>
                    {stat.label}: {stat.value}
                  </li>
                ))
              }
            </ul>
            <div class="mt-10 flex">
              <a
                href={finalCtaPrimaryLink.href}
                class="text-sm/6 font-semibold text-indigo-600 hover:text-indigo-300"
              >
                {finalCtaPrimaryLink.label}
                <span aria-hidden="true">&rarr;</span>
              </a>
            </div>
          </div>
        </div>
      </div>
      <div
        aria-hidden="true"
        class="absolute inset-x-0 -top-16 -z-10 flex transform-gpu justify-center overflow-hidden blur-3xl"
      >
        <div
          style="clip-path: polygon(73.6% 51.7%, 91.7% 11.8%, 100% 46.4%, 97.4% 82.2%, 92.5% 84.9%, 75.7% 64%, 55.3% 47.5%, 46.5% 49.4%, 45% 62.9%, 50.3% 87.2%, 21.3% 64.1%, 0.1% 100%, 5.4% 51.1%, 21.4% 63.9%, 58.9% 0.2%, 73.6% 51.7%)"
          class="aspect-[1318/752] w-[82.375rem] flex-none bg-linear-to-r from-[#9fd6fc] to-[#8680fd] opacity-50"
        >
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
