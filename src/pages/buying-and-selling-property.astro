---
import FaqSection from "../components/buying-and-selling-property/FaqSection.astro";
import FinalCtaSection from "../components/buying-and-selling-property/FinalCtaSection.astro";
import HeroSection from "../components/buying-and-selling-property/HeroSection.astro";
import PrepareSection from "../components/buying-and-selling-property/PrepareSection.astro";
import ProcessSection from "../components/buying-and-selling-property/ProcessSection.astro";
import ServicesSection from "../components/buying-and-selling-property/ServicesSection.astro";
import TrustStripSection from "../components/buying-and-selling-property/TrustStripSection.astro";
import { propertyPageContent as content } from "../config/content/property";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title={content.seo.title}
  description={content.seo.description}
  canonicalPath={content.seo.canonicalPath}
  ogType="website"
>
  <HeroSection hero={content.hero} />
  <ServicesSection
    servicesSection={content.servicesSection}
    services={content.services}
  />
  <ProcessSection process={content.process} />
  <TrustStripSection trustStrip={content.trustStrip} heroImage={content.hero.image} />
  <PrepareSection prepare={content.prepare} />
  <FaqSection faqs={content.faqs} />
  <FinalCtaSection
    finalCta={content.finalCta}
    trustStats={content.trustStrip.stats}
    heroImage={content.hero.image}
  />
</BaseLayout>
