---
import { Image } from "astro:assets";
import trustImage from "../../assets/images/pages/property/property-trust.webp";
import type { propertyPageContent } from "../../config/content/property";

type Content = typeof propertyPageContent;

const { trustStrip, heroImage } = Astro.props as {
	trustStrip: Content["trustStrip"];
	heroImage: Content["hero"]["image"];
};
---
<div class="relative overflow-hidden bg-white py-24 sm:py-32">
  <Image
    src={trustImage}
    alt=""
    aria-hidden="true"
    class="absolute inset-0 -z-10 size-full object-cover opacity-10"
  />
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-none">
      <p class="text-base/7 font-semibold text-indigo-600">{trustStrip.eyebrow}</p>
      <h1 class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl">{trustStrip.title}</h1>
      <div class="mt-10 grid max-w-xl grid-cols-1 gap-8 text-base/7 text-gray-600 lg:max-w-none lg:grid-cols-2">
        <div>
          <p>{trustStrip.columns[0][0]}</p>
          <p class="mt-8">{trustStrip.columns[0][1]}</p>
        </div>
        <div>
          <p>{trustStrip.columns[1][0]}</p>
          <p class="mt-8">{trustStrip.columns[1][1]}</p>
        </div>
      </div>
      <dl class="mt-16 grid grid-cols-1 gap-x-8 gap-y-12 sm:mt-20 sm:grid-cols-2 sm:gap-y-16 lg:mt-28 lg:grid-cols-4">
        {
          trustStrip.stats.map((stat) => (
            <div class="flex flex-col-reverse gap-y-3 border-l border-gray-200 pl-6">
              <dt class="text-base/7 text-gray-600">{stat.label}</dt>
              <dd class="text-3xl font-semibold tracking-tight text-gray-900">
                {stat.value}
              </dd>
            </div>
          ))
        }
      </dl>
    </div>
  </div>
</div>
