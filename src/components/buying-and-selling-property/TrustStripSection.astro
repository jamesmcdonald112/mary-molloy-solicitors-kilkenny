---
import { Image } from "astro:assets";
import trustImage from "../../assets/images/pages/property/property-trust.webp";
import type { propertyPageContent } from "../../config/content/property";

type Content = typeof propertyPageContent;

const { trustStrip, heroImage } = Astro.props as {
  trustStrip: Content["trustStrip"];
  heroImage: Content["hero"]["image"];
};
---
<div class="relative isolate overflow-hidden bg-white py-24 sm:py-32">
  <Image src={trustImage} alt="" class="absolute inset-0 -z-10 size-full object-cover opacity-10" />
  <div class="relative mx-auto max-w-7xl px-6 lg:px-8">
    <div aria-hidden="true" class="absolute -bottom-8 -left-96 -z-10 transform-gpu blur-3xl sm:-bottom-64 sm:-left-40 lg:-bottom-32 lg:left-8 xl:-left-10">
      <div style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)" class="aspect-1266/975 w-316.5 bg-linear-to-tr from-[#ff4694] to-[#776fff] opacity-15"></div>
    </div>
    <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-xl">
      <h2 class="text-base/8 font-semibold text-indigo-600">Our track record</h2>
      <p class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl">Trusted by thousands of creators&nbsp;worldwide</p>
      <p class="mt-6 text-lg/8 text-gray-700">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Maiores impedit perferendis suscipit eaque, iste dolor cupiditate blanditiis.</p>
    </div>
    <dl class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-10 text-gray-900 sm:mt-20 sm:grid-cols-2 sm:gap-y-16 lg:mx-0 lg:max-w-none lg:grid-cols-4">
      <div class="flex flex-col gap-y-3 border-l border-gray-900/15 pl-6">
        <dt class="text-sm/6">Creators on the platform</dt>
        <dd class="order-first text-3xl font-semibold tracking-tight">8,000+</dd>
      </div>
      <div class="flex flex-col gap-y-3 border-l border-gray-900/15 pl-6">
        <dt class="text-sm/6">Flat platform fee</dt>
        <dd class="order-first text-3xl font-semibold tracking-tight">3%</dd>
      </div>
      <div class="flex flex-col gap-y-3 border-l border-gray-900/15 pl-6">
        <dt class="text-sm/6">Uptime guarantee</dt>
        <dd class="order-first text-3xl font-semibold tracking-tight">99.9%</dd>
      </div>
      <div class="flex flex-col gap-y-3 border-l border-gray-900/15 pl-6">
        <dt class="text-sm/6">Paid out to creators</dt>
        <dd class="order-first text-3xl font-semibold tracking-tight">$70M</dd>
      </div>
    </dl>
  </div>
</div>
