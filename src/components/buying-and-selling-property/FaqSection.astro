---
import type { propertyPageContent } from "../../config/content/property";

type Content = typeof propertyPageContent;

const { faqs } = Astro.props as { faqs: Content["faqs"] };
---

<section class="bg-white">
  <div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8 lg:py-40">
    <div class="mx-auto max-w-4xl">
      <h2 class="text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl">
        Frequently asked questions
      </h2>
      <dl class="mt-16 divide-y divide-gray-900/10">
        {
          faqs.map((faq) => (
            <div class="py-6 first:pt-0 last:pb-0">
              <details class="group">
                <summary class="flex w-full cursor-pointer list-none items-start justify-between text-left text-gray-900">
                  <span class="text-base/7 font-semibold">
                    {faq.question}
                  </span>
                  <span class="ml-6 flex h-7 items-center">
                    <svg
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      aria-hidden="true"
                      class="size-6 group-open:hidden"
                    >
                      <path
                        d="M12 6v12m6-6H6"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                    </svg>
                    <svg
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      aria-hidden="true"
                      class="hidden size-6 group-open:block"
                    >
                      <path
                        d="M18 12H6"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                    </svg>
                  </span>
                </summary>
                <dd class="mt-2 pr-12">
                  <p class="text-base/7 text-gray-600">{faq.answer}</p>
                </dd>
              </details>
            </div>
          ))
        }
      </dl>
    </div>
  </div>
</section>
