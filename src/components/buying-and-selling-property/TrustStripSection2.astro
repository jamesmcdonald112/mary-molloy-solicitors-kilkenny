---
import { Image } from "astro:assets";
import trustImage from "../../assets/images/pages/property/property-trust.webp";
import type { propertyPageContent } from "../../config/content/property";

type Content = typeof propertyPageContent;

const { trustStrip, heroImage } = Astro.props as {
	trustStrip: Content["trustStrip"];
	heroImage: Content["hero"]["image"];
};
---
 

<section class="relative bg-gray-800 px-6 py-24 sm:px-12 sm:py-32 lg:px-16">
  <div class="absolute inset-0 overflow-hidden">
    <Image src={trustImage} alt="fdjkfns" class="size-full object-cover" />
  </div>
  <div aria-hidden="true" class="absolute inset-0 bg-gray-900/30"></div>
  <div class="relative mx-auto max-w-7xl">
    <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-none">
      <p class="text-base/7 font-semibold text-indigo-300">
        {trustStrip.eyebrow}
      </p>
      <h2
        class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-white sm:text-5xl"
      >
        {trustStrip.title}
      </h2>
      <div
        class="mt-10 grid max-w-xl grid-cols-1 gap-8 text-base/7 text-white/90 lg:max-w-none lg:grid-cols-2"
      >
        {
          trustStrip.columns.map((column) => (
            <div>
              {column.map((paragraph, index) => (
                <p class={index > 0 ? "mt-8" : undefined}>{paragraph}</p>
              ))}
            </div>
          ))
        }
      </div>
      <dl
        class="mt-16 grid grid-cols-1 gap-x-8 gap-y-8 sm:mt-20 sm:grid-cols-2 lg:mt-24 lg:grid-cols-4"
      >
        {
          trustStrip.stats.map((stat) => (
            <div class="rounded-xl bg-white/10 p-5 ring-1 ring-white/20 backdrop-blur-sm">
              <dt class="text-base/7 font-semibold text-white">{stat.label}</dt>
            </div>
          ))
        }
      </dl>
    </div>
  </div>
</section>
