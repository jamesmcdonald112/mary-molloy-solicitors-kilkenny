---
import { Image } from "astro:assets";
import heroImage from "../../assets/images/pages/property/property-hero.webp";
import type { propertyPageContent } from "../../config/content/property";
import { globalCtas } from "../../config/ctas";
import ButtonLink from "../ui/ButtonLink.astro";

type Content = typeof propertyPageContent;

const { hero } = Astro.props as { hero: Content["hero"] };
---

<div class="relative bg-gray-100">
  <div class="mx-auto max-w-7xl
    lg:grid lg:grid-cols-12 lg:gap-x-8 lg:px-8">
    <div
      class="lg:col-span-7 xl:col-span-6
        px-6 lg:px-0
        pt-10 sm:pt-24
        pb-24 sm:pb-24"
    >
      <div class="mx-auto max-w-lg lg:mx-0">
        <!-- Badge -->
        <a
          href={hero.badge.href}
          class="group
            inline-flex items-center gap-2
            px-3 py-1
            rounded-full
            text-xs sm:text-sm/6 text-gray-500
            ring-1 ring-gray-900/20
            hover:text-gray-700 hover:ring-gray-900/40 hover:bg-gray-200
            focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-700
            transition-colors duration-200"
        >
          <span>{hero.badge.text}</span>
          <span
            class="font-semibold whitespace-nowrap text-gray-600 group-hover:text-gray-800"
          >
            {hero.badge.linkLabel}
          </span>
          <span
            aria-hidden="true"
            class="inline-block transition-transform duration-200 group-hover:translate-x-1"
          >
            &rarr;
          </span>
        </a>
        <!-- Title -->
        <h1
          class="mt-8 sm:mt-10
            text-5xl sm:text-7xl
            font-semibold tracking-tight text-pretty
            text-gray-900"
        >
          {hero.title}
        </h1>
        <!-- Subtitle -->
        <p
          class="mt-8
            text-lg sm:text-xl/8 font-medium text-pretty
            text-gray-500"
        >
          {hero.subtitle}
        </p>
        <!-- CTAs -->
        <div
          class="mt-10
            flex flex-col gap-6
            sm:flex-row sm:items-center gap-x-6"
        >
          <ButtonLink
            href={globalCtas.call.href}
            size="lg"
            block={true}
            label={globalCtas.call.label}
            icon={globalCtas.call.icon}
          />
          <ButtonLink
            href={globalCtas.email.href}
            variant="outline"
            size="lg"
            block={true}
            label={globalCtas.email.label}
            endArrow={true}
          />
        </div>
      </div>
    </div>
    <div
      class="relative lg:col-span-5 lg:-mr-8 xl:absolute xl:inset-0 xl:left-1/2 xl:mr-0"
    >
      <Image
        src={heroImage}
        alt={hero.image.alt}
        decoding="async"
        loading="eager"
        fetchpriority="high"
        class="w-full lg:h-full lg:absolute lg:inset-0 bg-gray-50 aspect-square lg:aspect-auto object-cover md:object-[80%_90%]"
      />
    </div>
  </div>
</div>
