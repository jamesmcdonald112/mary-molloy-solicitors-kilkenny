---
// Imports
import { Image } from "astro:assets";
import checkCircleIcon from "../../assets/icons/checkCircleIcon.svg?raw";
import processAttributionImage from "../../assets/team/maryCropped.webp";
import type { propertyPageContent } from "../../config/content/property";

// Local content type alias
type Content = typeof propertyPageContent;

// Component props
const { process } = Astro.props as { process: Content["process"] };
---

<!-- Process Section: Wrapper -->
<section class="relative isolate overflow-hidden bg-white py-24 sm:py-32">
  <!-- Process Section: Container -->
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <!-- Process Section: Intro copy (eyebrow, title, intro) -->
    <div class="mx-auto max-w-2xl lg:mx-0">
      <p class="text-base/7 font-semibold text-gray-600">
        {process.eyebrow}
      </p>
      <h2
        class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl"
      >
        {process.title}
      </h2>
      <p class="mt-6 text-xl/8 text-gray-700">{process.intro}</p>
    </div>
    <!-- Process Section: Two-column content grid -->
    <div
      class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 lg:mx-0 lg:mt-10 lg:max-w-none lg:grid-cols-12"
    >
      <!-- Process Section: Right column (testimonial/attribution quote) -->
      <div class="relative lg:order-last lg:col-span-5">
        <!-- Attribution quote and details -->
        <figure class="border-l border-gray-600 pl-8">
          <blockquote
            class="text-xl/8 font-semibold tracking-tight text-gray-900"
          >
            <p>"{process.attribution}"</p>
          </blockquote>
          <!-- Attribution block (image + name + title) -->
          <figcaption class="mt-8 flex gap-x-4">
            <Image
              src={processAttributionImage}
              alt={process.attributionImage.alt}
              class="mt-1 size-10 flex-none rounded-full bg-gray-50 object-cover"
            />
            <div class="text-sm/6">
              <div class="font-semibold text-gray-900">
                {process.attributionName}
              </div>
              <div class="text-gray-600">{process.attributionTitle}</div>
            </div>
          </figcaption>
        </figure>
      </div>
      <!-- Process Section: Left column (body copy + step list) -->
      <div class="max-w-xl text-base/7 text-gray-600 lg:col-span-7">
        <!-- Main body text -->
        <p>{process.body}</p>
        <!-- Process steps -->
        <ul role="list" class="mt-8 max-w-xl space-y-8 text-gray-600">
          {
            // Single process step item
            process.steps.map((step) => (
              <li class="flex gap-x-3">
                {/* Step icon */}
                <span
                  set:html={checkCircleIcon}
                  aria-hidden="true"
                  class="mt-1 size-5 text-gray-600"
                />
                {/* Step text (title + description) */}
                <span>
                  <strong class="font-semibold text-gray-900">
                    {step.title}.
                  </strong>{" "}
                  {step.description}
                </span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
