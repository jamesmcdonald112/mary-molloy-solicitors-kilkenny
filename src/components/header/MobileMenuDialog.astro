---
import Brand from "./Brand.astro";
import MobileMenuButton from "./MobileMenuButton.astro";
import closeMenuIcon from "../../assets/navbar/closeMenuIcon.svg?raw";

interface MobileMenuDialogProps {
  companyLogo: string;
  ariaLabel: string;
}

const { companyLogo, ariaLabel } = Astro.props as MobileMenuDialogProps;
---

<dialog
  id="mobile-menu"
  data-mobile-menu
  class="text-textOnDark backdrop:bg-black/10 backdrop:backdrop-blur-xs lg:hidden"
>
  <div data-overlay tabindex="0" class="fixed inset-0 focus:outline-none">
    <div
      class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-header p-6 sm:max-w-sm sm:ring-1 sm:ring-accent-900/10"
    >
      <div class="flex items-center justify-between">
        <Brand companyLogo={companyLogo} ariaLabel={ariaLabel} />

        <!-- Close Menu -->
        <MobileMenuButton
          icon={closeMenuIcon}
          border={false}
          srLabel={"Close Mobile Menu"}
          action={"close"}
          class={"rounded-full transition-transform duration-200 hover:rotate-90"}
        />
      </div>

      <div class="mt-6">
        <slot />
      </div>
    </div>
  </div>
</dialog>
