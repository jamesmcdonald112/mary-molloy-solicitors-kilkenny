---
interface PhoneNumberProps {
	phoneHref: string;
	phoneIcon: string;
	phoneDisplay: string;
	size?: "sm" | "md" | "lg";
	class?: string;
}

const {
	phoneHref,
	phoneIcon,
	phoneDisplay,
	size = "md",
	class: className = "",
} = Astro.props as PhoneNumberProps;

const sizeMap = {
	sm: { text: "text-sm", iconSize: "h-5" },
	md: { text: "text-base", iconSize: "h-6" },
	lg: { text: "text-lg", iconSize: "h-8" },
} as const;

const { text, iconSize } = sizeMap[size];
---

<a
  class={`
    flex gap-2 items-center 
    font-semibold ${text} 
    ${className}`}
  href={`tel:${phoneHref}`}
>
  <span class={`block ${iconSize}  [&_svg]:size-full`} set:html={phoneIcon} />
  {phoneDisplay}</a
>
