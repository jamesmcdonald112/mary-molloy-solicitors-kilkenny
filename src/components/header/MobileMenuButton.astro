---
interface MobileMenuButtonProps {
  icon: string;
  border?: boolean;
  srLabel: string;
  action: "open" | "close";
  controlsId?: string;
  class?: string;
}

const {
  icon,
  border = false,
  srLabel,
  action,
  controlsId = "mobile-menu",
  class: className = "",
} = Astro.props as MobileMenuButtonProps;

const classes = [
  "cursor-pointer transition duration-200 hover:scale-105 grid place-items-center p-2.5 hover:bg-accentHover focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent lg:hidden",
  border ? "border border-border rounded-md" : "",
  className,
]
  .filter(Boolean)
  .join(" ");
---

<!-- MODAL BUTTON -->
<button
  type="button"
  class={classes}
  aria-controls={controlsId}
  data-action={action}
>
  <span class="sr-only">{srLabel}</span>
  <span
    set:html={icon}
    class="block w-6 h-6 text-textOnDark [&_svg]:w-full [&_svg]:block"
  />
</button>
